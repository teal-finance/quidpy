{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "allowJs": true,
    "removeComments": true,
    "strictFunctionTypes": true,
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "tests/*"
      ],
      "*": [
        "tests/*",
        "node_modules/*"
      ]
    }
  },
  "include": [
    "tests/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
}